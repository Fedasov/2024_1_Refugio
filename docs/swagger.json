{
    "swagger": "2.0",
    "info": {
        "description": "API server for mail",
        "title": "API Mail",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/email/add": {
            "post": {
                "description": "Добавить новое почтовое сообщение в систему",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Добавить новое почтовое сообщение",
                "parameters": [
                    {
                        "format": "json",
                        "description": "Почтовое сообщение в формате JSON",
                        "name": "email",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/email.Email"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        },
        "/email/delete/{id}": {
            "delete": {
                "description": "Удалить почтовое сообщение по его идентификатору",
                "produces": [
                    "application/json"
                ],
                "summary": "Удалить почтовое сообщение",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID почтового сообщения",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        },
        "/email/update/{id}": {
            "put": {
                "description": "Обновить существующее почтовое сообщение по его идентификатору",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Обновить почтовое сообщение",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID почтового сообщения",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        },
        "/email/{id}": {
            "get": {
                "description": "Получить почтовое сообщение по его уникальному идентификатору",
                "produces": [
                    "application/json"
                ],
                "summary": "Получить почтовое сообщение по ID",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID почтового сообщения",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/email.Email"
                        }
                    }
                }
            }
        },
        "/emails": {
            "get": {
                "description": "Получить список всех почтовых сообщений",
                "produces": [
                    "application/json"
                ],
                "summary": "Отобразить список почтовых сообщений",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/email.Email"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "email.Email": {
            "type": "object",
            "properties": {
                "dateOfDispatch": {
                    "description": "Дата отправки письма (ставится now).",
                    "type": "string"
                },
                "deleted": {
                    "description": "Статус, который показывает, удалено ли письмо (по умолчанию false).",
                    "type": "boolean"
                },
                "draftStatus": {
                    "description": "Статус, который показывает, что письмо является черновиком (по умолчанию false).",
                    "type": "boolean"
                },
                "id": {
                    "description": "Уникальный идентификатор письма в бд.",
                    "type": "integer"
                },
                "mark": {
                    "description": "Какой-нибудь флаг, например, избранное (по умолчанию пусто).",
                    "type": "string"
                },
                "photoId": {
                    "description": "Ссылка на фото, которое пользователь прикрепил к письму (по умолчанию пусто).",
                    "type": "string"
                },
                "readStatus": {
                    "description": "Статус, который показывает, было ли прочитано письмо (по умолчанию false).",
                    "type": "boolean"
                },
                "replyToEmailId": {
                    "description": "Id письма, на которое можно отвечать (по умолчанию пусто).",
                    "type": "integer"
                },
                "text": {
                    "description": "Текст письма.",
                    "type": "string"
                },
                "topic": {
                    "description": "Тема письма.",
                    "type": "string"
                }
            }
        }
    }
}